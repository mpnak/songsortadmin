<p id="notice"><%= notice %></p>

<div class="row">
  <div class="station show">
    <div class="station-content">
      <%= @station.name %>
    </div>
  </div>

  <div id="station-song-loader">
    <div class="loader-content">
      Drag and drop spotify tracks or playlists
    </div>
  </div>
</div>

<div class="station-toolbar row">
  <div class="total-tracks">
    Total Tracks: <%= @tracks.count %>
  </div>

  <div class="station-sort">
  </div>

  <%= link_to 'UPDATE', "#", class: 'btn update-station' %>
</div>

<div class="tabletop-row">
  <div>
    All
  </div>

  <div>
    Unranked
  </div>

  <div>
    Ranked
  </div>

  <div>
    MORE POPULAR
  </div>

  <div>
    LESS POPULAR
  </div>
</div>

<table class="tracks">
  <% @tracks.each do |track| %>
    <tr class="track-row">
      <td class="delete-track track-cell">
        <%= image_tag("delete_track_icon.png") %>
      </td>
      <td class="track-title track-cell"><%= track.title %></td>
      <td class="track-artist track-cell"><%= track.artist %></td>
      <td class="undergroundness-rating track-cell">
        <div class="undergroundness-label">
          UNDERGROUNDNESS
        </div>
        <div class="rating-selector">
        <% 1.upto(5) do |n| %>
          <div
           class="rating-item <%= track.undergroundness == n ? 'selected' : '' %>"
           data-rating="<%= n %>"
           data-track="<%= track.id %>"
           ></div>
         <% end %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_station_path(@station) %> |
<%= link_to 'Back', stations_path %>
